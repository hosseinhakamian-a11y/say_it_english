{
    "buildCommand": "npm run build",
    "outputDirectory": "dist/public",
    "functions": {
        "api/**/*.ts": {
            "includeFiles": "server/**,shared/**"
        }
    },
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/api/index"
        },
        {
            "source": "/((?!api/).*)",
            "destination": "/index.html"
        }
    ]
}